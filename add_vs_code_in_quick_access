Windows Registry Editor Version 5.00

; —— Right-click on a folder
[HKEY_CLASSES_ROOT\Directory\shell\VSCode]
@="Open with Code"
"Icon"="C:\\Users\\<your_name>\\AppData\\Local\\Programs\\Microsoft VS Code\\Code.exe"
     

[HKEY_CLASSES_ROOT\Directory\shell\VSCode\command]
@="\"put your path with double slash\\Code.exe\" \"%1\""

; —— Right-click inside a folder (background)
[HKEY_CLASSES_ROOT\Directory\Background\shell\VSCode]
@="Open with Code"
"Icon"="put your path with double slash\\Code.exe"

[HKEY_CLASSES_ROOT\Directory\Background\shell\VSCode\command]
@="\"put your path with double slash\\Code.exe\" \"%V\""
